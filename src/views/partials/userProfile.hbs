{{!-- <div class="container"> --}}
  <div class="row row-cols-2">
    <div class="col">
      <img src="/uploads/{{user.photo}}" class="img-fluid" alt="...">
    </div>
    {{!-- {{#if user}} --}}
    <div class="col" name="user-name">
      Имя пользователя : {{user.firstName}}  {{user.lastName}}
    </div>
    <div class="col" name="user-mail">
      Email: {{user.email}}
    </div>
    <div class="col" name="user-mail">
