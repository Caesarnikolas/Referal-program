
{{>navbar}}
<div class="register-form">

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.4/css/bootstrap.min.css" />




<div class="p-x-1 p-y-3">
  {{#if messages.error}}
   <legend class="m-b-1 text-xs-center">{{messages.error}}</legend>
   {{/if}}
  <form class="card card-block m-x-auto bg-faded form-width" method="POST" action="/register">
    <legend class="m-b-1 text-xs-center">Регистрация</legend>
    <div class="form-group input-group">
      <span class="has-float-label">
        <input class="form-control" id="first" type="text" name="firstName" placeholder="Имя" />
        <label for="first">Имя</label>
      </span>
      <span class="has-float-label">
        <input class="form-control" id="last" type="text" name="lastName" placeholder="Фамилия" />
        <label for="last">Фамилия</label>
      </span>
    </div>
    <div class="form-group input-group">
      <span class="input-group-addon">@</span>
      <span class="has-float-label">

        <input class="form-control" id="email" name="email" type="email" placeholder="name@example.com" />

        <label for="email">E-mail</label>
      </span>
    </div>
    <div class="form-group has-float-label">
      <input class="form-control" id="password" name="password" type="password" placeholder="••••••••" />
      <label for="password">Пароль</label>
    </div>




      <div class="text-xs-center">
        <button class="btn btn-block btn-primary" type="submit">Регистрация</button>
      </div>
    </form>
  </div>
</div>
